<h1>New User</h1>

<%= form_for @changeset, user_path(@conn, :create), fn f -> %>
  <div class="form-group">
    <%= text_input f, :name, placeholder: "Name", class: "form-control", autofocus: "autofocus", required: true %>
  </div>
  <div class="form-group">
    <%= text_input f, :email, placeholder: "Email", class: "form-control", type: "email", required: true %>
  </div>
  <div class="form-group">
    <%= password_input f, :password, placeholder: "Password", class: "form-control", required: true %>
  </div>
  <%= font_awesome_submit "Create User", "thumbs-up", class: "btn btn-primary btn-lg" %>
<% end %>


